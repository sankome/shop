<%- include("../parts/header") %>
		<h1>Products</h1>
		<ul class="product-list">
			<%
				if (locals.products) {
					for (const product of products) {
			%>
			<li class="product-list__product">
				<a class="product-list__link" href="/product/?id=<%= product.id %>">
					<img class="product-list__image" src="<%= product.image %>" onerror="this.src = 'http://placekitten.com/500/500/?image=' + (Math.floor(Math.random() * 20)).toString();">
					<h2 class="product-list__title"><%= product.title %></h2>
					<% 	if (product.salePrice && product.salePrice < product.price) { %>
					<p class="product-list__price"><del>$<%= (product.price * 0.01).toFixed(2) %></del> $<%= (product.salePrice * 0.01).toFixed(2) %></p>
					<% 	} else { %>
					<p class="product-list__price">$<%= (product.price * 0.01).toFixed(2) %></p>
					<% 	} %>
				</a>
			</li>
			<%
					}
				}
			%>
		</ul>
<%- include("../parts/footer") %>